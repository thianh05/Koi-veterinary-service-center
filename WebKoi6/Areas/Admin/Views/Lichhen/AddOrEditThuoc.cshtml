@using WebKoi6.DAL.Models;
@model Donthuoc;
@{
    ViewData["Title"] = "";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var title = string.Empty;
    if (Model.Id > 0)
    {
        title = "Chỉnh sửa đơn thuốc";
    }
    else
    {
        title = "Thêm mới đơn thuốc";
    }
    int lichhenId = (int)ViewBag.LichhenId;
}
<div class="row">
    <div class="col-lg-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">@title</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@title</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@title</h4>
            </div>
            <div class="card-body">
                <div class="live-preview">
                    <p class="text-danger">@ViewBag.Error</p>
                    <form action="/Admin/Lichhen/AddOrEditThuoc" method="post">
                        <input type="hidden" value="@Model.Id" name="Id" />
                        <input type="hidden" value="@lichhenId" name="LichhenId" />
                        <div class="row gy-4">
                            <div class="col-xxl-4 col-md-6">
                                <div>
                                    <label class="form-label"> Tên thuốc <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="Tenthuoc" value="@Model.Tenthuoc" required>
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-6">
                                <div>
                                    <label class="form-label">Liều lượng<span class="text-danger">*</span></label>
                                    <input type="number" class="form-control" name="Lieuluong" value="@Model.Lieuluong" required>
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-6">
                                <div>
                                    <label class="form-label">Hướng dẫn sử dụng</label>
                                    <input type="text" class="form-control" name="hdsd" value="@Model.hdsd">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary waves-effect waves-light">Lưu</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--end col-->
</div>