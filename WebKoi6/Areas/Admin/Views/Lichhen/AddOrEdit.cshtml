@using WebKoi6.DAL.Models;
@model Lichhen;
@{
    ViewData["Title"] = "";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var title = string.Empty;
    if (Model.Id > 0)
    {
        title = "Chỉnh sửa lịch hẹn";
    }
    else
    {
        title = "Thêm mới lịch hẹn";
    }
    var lstBacsi = (List<Bacsi>)ViewBag.ListBacsi;
    var lstDichvu = (List<Dichvuthuy>)ViewBag.ListDichvu;
    var lstKhachhang = (List<Khachhang>)ViewBag.Khachhang;
}
<div class="row">
    <div class="col-lg-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">@title</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@title</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@title</h4>
            </div>
            <div class="card-body">
                <div class="live-preview">
                    <p class="text-danger">@ViewBag.Error</p>
                    <form action="/Admin/Lichhen/AddOrEdit" method="post">
                        <input type="hidden" value="@Model.Id" name="Id" />
                        <div class="row gy-4">
                            <div class="col-xxl-4 col-md-6">
                                <div>
                                    <label class="form-label">Khách hàng<span class="text-danger">*</span></label>
                                    <select class="form-control" name="KhachhangId">
                                        <option value="0">-Chọn khách hàng-</option>
                                        @foreach (var item in lstKhachhang)
                                        {
                                            if (Model.KhachhangId == item.Id)
                                            {
                                                <option value="@item.Id" selected>@item.TenKhachHang</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Id">@item.TenKhachHang</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-6">
                                <div>
                                    <label class="form-label">Dịch vụ<span class="text-danger">*</span></label>
                                    <select class="form-control" name="DichVuId">
                                        <option value="0">-Chọn dịch vụ-</option>
                                        @foreach (var item in lstDichvu)
                                        {
                                            if (Model.DichVuId == item.MaDichVu)
                                            {
                                                <option value="@item.MaDichVu" selected>@item.TenDichVu</option>
                                            }
                                            else
                                            {
                                                <option value="@item.MaDichVu">@item.TenDichVu</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-6">
                                <div>
                                    <label class="form-label">Bác sĩ<span class="text-danger">*</span></label>
                                    <select class="form-control" name="BacsiId">
                                        <option value="0">-Chọn bác sĩ-</option>
                                        @foreach (var item in lstBacsi)
                                        {
                                            if (Model.BacsiId == item.Id)
                                            {
                                                <option value="@item.Id" selected>@item.TenBacSi</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Id">@item.TenBacSi</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-xxl-4 col-md-6">
                                <div>
                                    <label class="form-label">Ngày hẹn<span class="text-danger">*</span></label>
                                    <input type="date" class="form-control" name="Ngayhen" value="@(Model.Ngayhen != null ? Model.Ngayhen.Value.ToString("yyyy-MM-dd"): "")" required>
                                </div>
                            </div>                           
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary waves-effect waves-light">Lưu</button>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--end col-->
</div>