@using WebKoi6.DAL.Models;
@model Lichhen;
@{
    ViewData["Title"] = "";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Thay đổi trạng thái lich hẹn</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Thay đổi trạng thái lich hẹn</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Thay đổi trạng thái lich hẹn</h4>
            </div>
            <div class="card-body">
                <div class="live-preview">
                    <p class="text-danger">@ViewBag.Error</p>
                    <form action="/Admin/Lichhen/ChangeStatus" method="post">
                        <input type="hidden" value="@Model.Id" name="Id" />
                        <input type="hidden" value="@Model.BacsiId" name="BacsiId" />
                        <input type="hidden" value="@Model.DichVuId" name="DichVuId" />
                        <input type="hidden" value="@Model.KhachhangId" name="KhachhangId" />
                        <input type="hidden" value="@Model.Ngayhen" name="Ngayhen" />
                        <div class="row gy-4">
                            <div class="col-xxl-4 col-md-6 @(Model.Id > 0 ? "" : "d-none")">
                                <div>
                                    <label class="form-label">Trạng thái<span class="text-danger">*</span></label>
                                    <select class="form-control" name="Trangthai">
                                        <option value="0" @(Model.Trangthai == 0 ? "selected" : "")>Chờ tiếp nhận</option>
                                        <option value="1" @(Model.Trangthai == 1 ? "selected" : "")>Đã tiếp nhận</option>
                                        <option value="2" @(Model.Trangthai == 2 ? "selected" : "")>Hoàn thảnh</option>
                                        <option value="3" @(Model.Trangthai == 3 ? "selected" : "")>Hủy</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary waves-effect waves-light">Lưu</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--end col-->
</div>