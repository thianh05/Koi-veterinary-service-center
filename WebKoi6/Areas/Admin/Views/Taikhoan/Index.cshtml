@using WebKoi6.DAL.Models;
@model List<Taikhoan>;
@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var search = ViewBag.Search;
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Danh sách tài khoản</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh sách tài khoản</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Danh sách tài khoản</h4>
                <div class="flex-shrink-0">
                    <button type="button" id="btnCreate" onclick="window.location.href='/Admin/Taikhoan/AddOrEdit'" class="btn btn-warning btn-sm"><i class="bx bx-plus"></i> Thêm</button>
                </div>
            </div>
            <div class="card-body">
                <form action="/Admin/Taikhoan">
                    <div class="live-preview pb-3">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Tìm kiếm</label>
                                <input type="text" class="form-control" id="txtSearch" name="search" value="@search" placeholder="Tên, tài khoản,..." />
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-primary" style="margin-top:28px;" id="btnSeach"><i class="bx bx-search"></i></button>
                            </div>
                        </div>
                    </div>
                </form>
                <table class="table table-centered align-middle" id="tblAdmin">
                    <thead>
                        <tr>
                            <th>Họ và tên</th>
                            <th>Tài khoản</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FullName</td>
                                    <td>@item.Username</td>
                                    <td>
                                        <a class="btn btn-info btn-sm me-2" href="/Admin/Taikhoan/AddOrEdit?id=@item.Id">Sửa</a>
                                        <a class="btn btn-danger btn-sm" onclick="return confirm('Bạn có muốn xóa tài khoản này?')" href="/Admin/Taikhoan/Delete?id=@item.Id">Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div>
